<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10sp"
    tools:context=".MakeInvoiceActivity">

    <RelativeLayout
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Invoice"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="60sp"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/invoice_name"
                android:layout_width="170dp"
                android:layout_height="0dp"
                android:layout_marginEnd="32dp"
                android:hint="REF NUMBER"
                app:layout_constraintBaseline_toBaselineOf="@+id/invoice_ref_display"
                app:layout_constraintEnd_toEndOf="@+id/createDate"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/createDate" />

            <ImageView
                android:id="@+id/add_invoice_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_control_point_duplicate_black"
                app:layout_constraintBottom_toBottomOf="@+id/invoice_name"
                app:layout_constraintStart_toEndOf="@+id/invoice_name"
                app:layout_constraintTop_toTopOf="@+id/invoice_name"
                app:layout_constraintVertical_bias="0.36" />

            <TextView
                android:id="@+id/invoice_ref_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="..."
                app:layout_constraintEnd_toEndOf="@+id/editImageDate"
                app:layout_constraintStart_toStartOf="@+id/editImageDate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/createDate"
                android:layout_width="wrap_content"
                android:elevation="10sp"
                android:layout_height="wrap_content"
                android:text="Invoice Date  :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/editImageDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/editImageDate"
                android:layout_width="143dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:elevation="10sp"
                android:layout_height="33dp"
                android:layout_marginStart="48dp"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/createDate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <View
                android:id="@+id/view"
                style="@style/Divider"
                android:layout_marginStart="24sp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24sp"
                android:elevation="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editImageDate"
                app:layout_constraintVertical_bias="0.113" />

            <TextView
                android:id="@+id/dueDate"
                android:layout_width="131dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:elevation="10sp"
                android:text="Payment Due: "
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/payBy"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/payBy"
                android:layout_width="143dp"
                android:layout_height="33dp"
                android:drawableLeft="@drawable/ic_date_range_red_32dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:elevation="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/editImageDate"
                app:layout_constraintStart_toStartOf="@+id/editImageDate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.196" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:elevation="10sp"
                android:layout_marginTop="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.46"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/payBy"
                app:layout_constraintVertical_bias="0.109">

                <TextView
                    android:id="@+id/customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10sp"
                    android:layout_marginStart="24sp"
                    android:drawableLeft="@drawable/ic_group_add"
                    android:text="  Customer"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="wrap_content"
                    android:elevation="10sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/customer"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="10dp"
                    android:text="Contact"
                    android:textColor="#000000" />

                <View
                    style="@style/Divider"
                    android:elevation="10sp"
                    android:layout_below="@+id/customerName"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="24sp" />

                <TextView
                    android:id="@+id/items"
                    android:layout_width="wrap_content"
                    android:elevation="10sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customerName"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@drawable/ic_control_point_duplicate_black"
                    android:text="   Items"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/price_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/items"
                    android:hint="Price"
                    android:layout_below="@id/customerName"
                    android:elevation="10sp"
                    android:layout_marginTop="24dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="200sp"/>


                <EditText
                    android:id="@+id/itemDetailsOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/items"
                    android:layout_marginStart="24sp"
                    android:layout_marginEnd="24sp"
                    android:layout_marginTop="18dp"
                    android:hint="Add Item"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/itemDetailsTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price_heading"
                    android:layout_marginStart="300sp"
                    android:layout_marginTop="18dp"
                    android:hint="Amount..."
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/itemDetailsOneDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/itemDetailsTwo"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="18dp"
                    android:elevation="10sp"
                    android:hint="...."
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/itemDetailsTwoDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/itemDetailsTwo"
                    android:layout_marginStart="320sp"
                    android:layout_marginTop="18dp"
                    android:elevation="10sp"
                    android:hint="...."
                    android:textSize="20sp" />

                <View
                    style="@style/Divider"
                    android:elevation="10sp"
                    android:layout_below="@+id/items"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="57dp"
                    android:layout_marginEnd="24sp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10sp"
                android:text="Sub Total"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                app:layout_constraintVertical_bias="0.15" />

            <View
                style="@style/Divider"
                android:elevation="10sp"
                android:layout_below="@+id/textView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.068" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Tax Payable"
                android:textSize="15sp"
                android:elevation="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.072"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.143" />

            <TextView
                android:id="@+id/subTotal"
                android:background="@drawable/amounts_display_edits"
                android:layout_width="wrap_content"
                android:elevation="10sp"
                android:layout_height="wrap_content"
                android:text="subTotalAmount"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.604"
                app:layout_constraintStart_toEndOf="@+id/textView" />

            <TextView
                android:background="@drawable/amounts_display_edits"
                android:id="@+id/taxPayable"
                android:layout_width="wrap_content"
                android:elevation="10sp"
                android:layout_height="wrap_content"
                android:text="16%"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.383"
                app:layout_constraintStart_toEndOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Amount Due"
                android:elevation="10sp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.431"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.154" />

            <TextView
                android:id="@+id/finalTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00"
                android:elevation="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.083" />

            <Button
                android:id="@+id/sendInvoice"
                android:background="@color/colorPrimary"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Send Invoice"
                android:textColor="#ffffff"
                android:elevation="10dp"
                android:shadowColor="#5e6e5e"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.882"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/finalTotal"
                app:layout_constraintVertical_bias="0.2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>


</ScrollView>